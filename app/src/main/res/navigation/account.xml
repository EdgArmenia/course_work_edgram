<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/account"
    app:startDestination="@id/accountFragment">

    <fragment
        android:id="@+id/accountFragment"
        android:name="com.example.coursework.view.fragments.AccountFragment"
        android:label="fragment_account"
        tools:layout="@layout/fragment_account" >
        <action
            android:id="@+id/action_accountFragment_to_accountSettingsFragment"
            app:destination="@id/accountSettingsFragment" />
        <action
            android:id="@+id/action_accountFragment_to_newPostFragment2"
            app:destination="@id/newPostFragment2" />
        <action
            android:id="@+id/action_accountFragment_to_likesViewFragment2"
            app:destination="@id/likesViewFragment2" />
        <action
            android:id="@+id/action_accountFragment_to_signInFragment2"
            app:destination="@id/signInFragment2"
            app:popUpTo="@id/accountFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/accountSettingsFragment"
        android:name="com.example.coursework.view.fragments.AccountSettingsFragment"
        android:label="fragment_account_settings"
        tools:layout="@layout/fragment_account_settings" />
    <fragment
        android:id="@+id/newPostFragment2"
        android:name="com.example.coursework.view.fragments.NewPostFragment"
        android:label="fragment_new_post"
        tools:layout="@layout/fragment_new_post" />
    <fragment
        android:id="@+id/likesViewFragment2"
        android:name="com.example.coursework.view.fragments.LikesViewFragment"
        android:label="fragment_likes_view"
        tools:layout="@layout/fragment_likes_view" />
    <fragment
        android:id="@+id/signInFragment2"
        android:name="com.example.coursework.view.fragments.SignInFragment"
        android:label="fragment_sign_in"
        tools:layout="@layout/fragment_sign_in" />
</navigation>